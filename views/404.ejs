    <script>
    // Theme toggle functionality
    function toggleTheme() {
        try {
            const body = document.body;
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            
            const slider = document.querySelector('.switch-slider');
            if (slider) {
                slider.textContent = newTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
            }
        } catch (error) {
            console.error('Theme toggle error:', error);
        }
    }

    // Initialize theme
    function initTheme() {
        try {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.body.setAttribute('data-theme', savedTheme);
            
            const slider = document.querySelector('.switch-slider');
            if (slider) {
                slider.textContent = savedTheme === 'dark' ? 'üåô' : '‚òÄÔ∏è';
            }
        } catch (error) {
            console.warn('Theme init error:', error);
        }
    }

    // Back to top functionality
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    function toggleBackToTop() {
        const backToTopBtn = document.querySelector('.back-to-top');
        if (!backToTopBtn) return;
        
        if (window.pageYOffset > 300) {
            backToTopBtn.classList.add('show');
        } else {
            backToTopBtn.classList.remove('show');
        }
    }

    // Copy to clipboard
    function copyToClipboard() {
        const url = window.location.href;
        const btn = document.querySelector('.share-copy');
        const originalText = btn.innerHTML;
        
        if (navigator.clipboard && navigator.clipboard.writeText) {
            navigator.clipboard.writeText(url).then(function() {
                btn.innerHTML = '<span>‚úÖ</span> Copied!';
                setTimeout(() => {
                    btn.innerHTML = originalText;
                }, 2000);
            }).catch(function(err) {
                fallbackCopyToClipboard(url, btn, originalText);
            });
        } else {
            fallbackCopyToClipboard(url, btn, originalText);
        }
    }
    
    // Fallback copy method
    function fallbackCopyToClipboard(text, btn, originalText) {
        const textArea = document.createElement('textarea');
        textArea.value = text;
        textArea.style.position = 'fixed';
        textArea.style.left = '-999999px';
        textArea.style.top = '-999999px';
        document.body.appendChild(textArea);
        textArea.focus();
        textArea.select();
        
        try {
            const successful = document.execCommand('copy');
            if (successful) {
                btn.innerHTML = '<span>‚úÖ</span> Copied!';
            } else {
                btn.innerHTML = '<span>‚ùå</span> Failed';
            }
        } catch (err) {
            btn.innerHTML = '<span>‚ùå</span> Failed';
        }
        
        setTimeout(() => {
            btn.innerHTML = originalText;
        }, 2000);
        
        document.body.removeChild(textArea);
    }

        }


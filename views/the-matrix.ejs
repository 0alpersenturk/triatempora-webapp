        // Matrix Article Transition
        document.addEventListener('DOMContentLoaded', function() {
            const matrixArticles = document.querySelectorAll('.matrix-article');
            
            matrixArticles.forEach(article => {
                article.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetUrl = this.getAttribute('href');
                    const message = this.getAttribute('data-message') || 'KNOCK, KNOCK...';
                    
                    // Show fullscreen matrix
                    const fullscreen = document.getElementById('matrix-fullscreen-article');
                    const fullscreenCanvas = document.getElementById('matrix-fullscreen-canvas-article');
                    const messageDiv = document.getElementById('matrix-message-article');
                    const ctx = fullscreenCanvas.getContext('2d');
                    
                    // Set message
                    messageDiv.textContent = message;
                    
                    // Make sure it's visible
                    fullscreen.style.display = 'block';
                    
                    // Set canvas to full screen
                    fullscreenCanvas.width = window.innerWidth;
                    fullscreenCanvas.height = window.innerHeight;
                    
                    // Activate fullscreen overlay
                    fullscreen.classList.add('active');
                    
                    // Matrix animation setup
                    const chars = 'ｱｲｳｴｵｶｷｸｹｺｻｼｽｾｿﾀﾁﾂﾃﾄﾅﾆﾇﾈﾉﾊﾋﾌﾍﾎﾏﾐﾑﾒﾓﾔﾕﾖﾗﾘﾙﾚﾛﾜﾝ0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ';
                    const fontSize = 16;
                    const columns = fullscreenCanvas.width / fontSize;
                    
                    const drops = [];
                    for (let i = 0; i < columns; i++) {
                        drops[i] = 1;
                    }
                    
                    function drawFullscreen() {
                        ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
                        ctx.fillRect(0, 0, fullscreenCanvas.width, fullscreenCanvas.height);
                        
                        ctx.fillStyle = '#00ff41';
                        ctx.font = fontSize + 'px monospace';
                        
                        for (let i = 0; i < drops.length; i++) {
                            const char = chars[Math.floor(Math.random() * chars.length)];
                            ctx.fillText(char, i * fontSize, drops[i] * fontSize);
                            
                            if (drops[i] * fontSize > fullscreenCanvas.height && Math.random() > 0.975) {
                                drops[i] = 0;
                            }
                            drops[i]++;
                        }
                    }
                    
                    // Animate for 2 seconds then redirect
                    let frameCount = 0;
                    const maxFrames = 120; // ~2 seconds at 60fps
                    
                    function animateFullscreen() {
                        drawFullscreen();
                        frameCount++;
                        
                        if (frameCount < maxFrames) {
                            requestAnimationFrame(animateFullscreen);
                        } else {
                            // Redirect to article
                            window.location.href = targetUrl;
                        }
                    }
                    
                    animateFullscreen();
                });
            });
        });

        // Clear Matrix overlay on page load
        window.addEventListener('pageshow', function(event) {
            const fullscreen = document.getElementById('matrix-fullscreen-article');
            if (fullscreen) {
                fullscreen.classList.remove('active');
                fullscreen.style.display = 'none';
            }
        });
